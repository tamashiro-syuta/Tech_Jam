<%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> 投稿できませんでした</h2>

            <ul>
                <% post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :名前 %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :タイトル %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :内容 %>
        <%= form.text_area :content %>
    </div>

    <div class="field">
        <%= form.label :困ってる度 %>
        <%= form.number_field :komaru %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>